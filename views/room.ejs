    #video-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, 300px);
        grid-auto-rows: 300px;

        /* means that every row should be 300px tall and every col be 300px wide */
    }

    video{
        width: 100%;
        height: 100%;
        object-fit: cover;
        
        /* zoom into the video till it fills the square and cuts off everything on the side */
    }
</style>
